@model IEnumerable<NorthWindTraders.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<div class="container-fluid">
    <h1 class="mt-4">Customers</h1>
    
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Customer</a>
    </p>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Customers List
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CompanyName)</th>
                        <th>@Html.DisplayNameFor(model => model.ContactName)</th>
                        <th>@Html.DisplayNameFor(model => model.ContactTitle)</th>
                        <th>@Html.DisplayNameFor(model => model.City)</th>
                        <th>@Html.DisplayNameFor(model => model.Country)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactName)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactTitle)</td>
                            <td>@Html.DisplayFor(modelItem => item.City)</td>
                            <td>@Html.DisplayFor(modelItem => item.Country)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.CustomerID" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.CustomerID" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.CustomerID" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 